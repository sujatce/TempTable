CREATE OR REPLACE SEQUENCE SMS_OPT_OUT_SEQ
  START = 1
  INCREMENT = 1
  COMMENT = 'Sequence used to generate SMS_OPT_OUT_ID values';


CREATE OR REPLACE TABLE SMS_OPT_OUT (
  SMS_OPT_OUT_ID NUMBER(38,0)
    DEFAULT SMS_OPT_OUT_SEQ.NEXTVAL
    NOT NULL,

  GMPI_ID NUMBER(38,0) NOT NULL,
  PHONE_ID NUMBER(38,0) NOT NULL,
  TEMPLATE_ID NUMBER(38,0) NOT NULL,
  PROGRAM_ID NUMBER(38,0) NOT NULL,
  PROGRAM_NAME VARCHAR(150) NOT NULL,

  -- other columns here --

  INSERT_DATE TIMESTAMP_NTZ(8) NOT NULL,
  INSERT_USER VARCHAR(75) NOT NULL,
  UPDATE_DATE TIMESTAMP_NTZ(8) NOT NULL,
  UPDATE_USER VARCHAR(75) NOT NULL
);


CREATE OR REPLACE TABLE SMS_OPT_OUT (
  SMS_OPT_OUT_ID NUMBER(38,0)
    DEFAULT SMS_OPT_OUT_SEQ.NEXTVAL
    NOT NULL,

  GMPI_ID NUMBER(38,0) NOT NULL,
  PHONE_ID NUMBER(38,0) NOT NULL,
  TEMPLATE_ID NUMBER(38,0) NOT NULL,
  PROGRAM_ID NUMBER(38,0) NOT NULL,
  PROGRAM_NAME VARCHAR(150) NOT NULL,

  -- other columns here --

  INSERT_DATE TIMESTAMP_NTZ(8) NOT NULL,
  INSERT_USER VARCHAR(75) NOT NULL,
  UPDATE_DATE TIMESTAMP_NTZ(8) NOT NULL,
  UPDATE_USER VARCHAR(75) NOT NULL
);


SELECT SMS_OPT_OUT_ID, GMPI_ID
FROM SMS_OPT_OUT
ORDER BY SMS_OPT_OUT_ID DESC;




STEP 5️⃣ (Optional but impressive) Add documentation
Comment the sequence
COMMENT ON SEQUENCE SMS_OPT_OUT_SEQ
