SELECT DISTINCT
       LEFT(LOAD_DATETIME, 10) AS LOAD_DATE
FROM ASQN_PRD_ORCHESTRATION_DB.DBO.PILLS_ON_HAND

UNION ALL

SELECT
       CAST(NULL AS VARCHAR(10)) AS LOAD_DATE
WHERE NOT EXISTS
(
    SELECT 1
    FROM ASQN_PRD_ORCHESTRATION_DB.DBO.PILLS_ON_HAND
);




SELECT DISTINCT
       LEFT([ASQN_PRD_ORCHESTRATION_DB].[DBO].[PILLS_ON_HAND].[LOAD_DATETIME], 10) AS [LOAD_DATE]
FROM [ASQN_PRD_ORCHESTRATION_DB].[DBO].[PILLS_ON_HAND]

UNION ALL

SELECT
       CAST(NULL AS NVARCHAR(10)) AS [LOAD_DATE]
WHERE NOT EXISTS
(
    SELECT 1
    FROM [ASQN_PRD_ORCHESTRATION_DB].[DBO].[PILLS_ON_HAND]
);
