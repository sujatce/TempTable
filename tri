


USE [ORCHESTRATION]
GO

/****** Object:  Trigger [dbo].[TR_PILLSONHAND_LR_UpdateDateUser]    Script Date: 12/12/2025 2:54:27 AM ******/
SET ANSI_NULLS ON
GO

SET QUOTED_IDENTIFIER ON
GO

CREATE TRIGGER [dbo].[TR_PILLSONHAND_LR_UpdateDateUser] ON [ORCHESTRATION].[dbo].[PILLS_ON_HAND]
AFTER UPDATE AS BEGIN UPDATE orchestration.dbo.pills_on_hand
SET [UPDATE_USER] = SUSER_NAME(),[UPDATE_DATE] = GETDATE()
FROM inserted WHERE orchestration.dbo.pills_on_hand.[PILLS_ON_HAND_ID] = inserted.[PILLS_ON_HAND_ID] END;
GO

ALTER TABLE [dbo].[PILLS_ON_HAND] ENABLE TRIGGER [TR_PILLSONHAND_LR_UpdateDateUser]
GO

